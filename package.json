{
  "name": "@node-llm/monitor",
  "version": "1.1.0",
  "type": "module",
  "description": "Production-grade observability and monitoring for NodeLLM.",
  "homepage": "https://node-llm.eshaiju.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ui": {
      "import": "./dist/ui/index.js",
      "types": "./dist/ui/index.d.ts"
    },
    "./adapters/prisma": {
      "import": "./dist/adapters/prisma/PrismaAdapter.js",
      "types": "./dist/adapters/prisma/PrismaAdapter.d.ts"
    },
    "./adapters/drizzle": {
      "import": "./dist/adapters/drizzle/DrizzleAdapter.js",
      "types": "./dist/adapters/drizzle/DrizzleAdapter.d.ts"
    },
    "./adapters/sequelize": {
      "import": "./dist/adapters/sequelize/SequelizeAdapter.js",
      "types": "./dist/adapters/sequelize/SequelizeAdapter.d.ts"
    },
    "./adapters/mongoose": {
      "import": "./dist/adapters/mongoose/MongooseAdapter.js",
      "types": "./dist/adapters/mongoose/MongooseAdapter.d.ts"
    },
    "./adapters/memory": {
      "import": "./dist/adapters/memory/MemoryAdapter.js",
      "types": "./dist/adapters/memory/MemoryAdapter.d.ts"
    },
    "./adapters/filesystem": {
      "import": "./dist/adapters/filesystem/FileAdapter.js",
      "types": "./dist/adapters/filesystem/FileAdapter.d.ts"
    }
  },
  "files": [
    "dist",
    "dashboard/build",
    "migrations"
  ],
  "scripts": {
    "build": "npm run build:server && npm run build:dashboard",
    "build:server": "tsup src/index.ts src/ui/index.ts src/adapters/prisma/PrismaAdapter.ts src/adapters/drizzle/DrizzleAdapter.ts src/adapters/sequelize/SequelizeAdapter.ts src/adapters/mongoose/MongooseAdapter.ts src/adapters/memory/MemoryAdapter.ts src/adapters/filesystem/FileAdapter.ts --format esm --dts --clean --no-splitting --external sequelize --external drizzle-orm --external mongoose --external @prisma/client",
    "build:dashboard": "cd dashboard && npm install && npm run build",
    "dev": "tsup src/index.ts src/ui/index.ts --format esm --dts --watch --external sequelize --external drizzle-orm --external mongoose --external @prisma/client",
    "dev:dashboard": "cd dashboard && npm run dev",
    "test": "vitest run",
    "example": "npm run build:server && tsx examples/dashboard.ts",
    "example:metadata": "npm run build:server && tsx examples/dashboard.ts",
    "example:custom": "npm run build:server && tsx examples/custom-adapter.ts",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "llm",
    "large-language-models",
    "ai",
    "nodejs",
    "monitoring",
    "observability",
    "telemetry",
    "infrastructure",
    "architecture",
    "openai",
    "anthropic",
    "gemini",
    "deepseek",
    "production"
  ],
  "author": "Shaiju Edakulangara",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-llm/node-llm-monitor"
  },
  "bugs": {
    "url": "https://github.com/node-llm/node-llm-monitor/issues"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.3",
    "@types/node": "^25.1.0",
    "preact": "^10.28.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "undici": ">=6.23.0",
      "lodash": ">=4.17.23",
      "lodash-es": ">=4.17.23",
      "esbuild": ">=0.25.0"
    }
  }
}
