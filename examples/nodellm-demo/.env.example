# NodeLLM Monitor Demo - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (at least one required for real mode)
# =============================================================================

# OpenAI API Key - Get yours at https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key - Get yours at https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google AI API Key - Get yours at https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# DeepSeek API Key - Get yours at https://platform.deepseek.com/
DEEPSEEK_API_KEY=

# =============================================================================
# NodeLLM Configuration
# =============================================================================

# Default provider to use (openai, anthropic, google, deepseek)
NODELLM_PROVIDER=openai

# Default model to use
# OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-3-5-sonnet-20241022, claude-3-haiku-20240307
# Google: gemini-1.5-pro, gemini-1.5-flash
# DeepSeek: deepseek-chat, deepseek-coder
NODELLM_MODEL=gpt-4o-mini

# =============================================================================
# Monitor Configuration
# =============================================================================

# Dashboard server port
PORT=3333

# Enable content capture (messages will be stored - use with caution)
CAPTURE_CONTENT=false

# Enable verbose logging
VERBOSE=false

# =============================================================================
# Optional: Custom API Base URLs
# =============================================================================

# OPENAI_API_BASE=https://api.openai.com/v1
# ANTHROPIC_API_BASE=https://api.anthropic.com
