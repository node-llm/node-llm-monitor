{
  "name": "@node-llm/monitor",
  "version": "0.2.0",
  "type": "module",
  "description": "Production-grade observability and monitoring for NodeLLM.",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://node-llm.eshaiju.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ui": {
      "import": "./dist/ui/index.js",
      "types": "./dist/ui/index.d.ts"
    },
    "./adapters/prisma": {
      "import": "./dist/adapters/prisma/PrismaAdapter.js",
      "types": "./dist/adapters/prisma/PrismaAdapter.d.ts"
    },
    "./adapters/memory": {
      "import": "./dist/adapters/memory/MemoryAdapter.js",
      "types": "./dist/adapters/memory/MemoryAdapter.d.ts"
    },
    "./adapters/filesystem": {
      "import": "./dist/adapters/filesystem/FileAdapter.js",
      "types": "./dist/adapters/filesystem/FileAdapter.d.ts"
    }
  },
  "files": [
    "dist",
    "dashboard/build",
    "migrations"
  ],
  "scripts": {
    "build": "npm run build:server && npm run build:dashboard",
    "build:server": "tsup src/index.ts src/ui/index.ts src/adapters/prisma/PrismaAdapter.ts src/adapters/memory/MemoryAdapter.ts src/adapters/filesystem/FileAdapter.ts --format esm --dts --clean --no-splitting --external @prisma/client",
    "build:dashboard": "cd dashboard && npm install && npm run build",
    "dev": "tsup src/index.ts src/ui/index.ts --format esm --dts --watch --external @prisma/client",
    "dev:dashboard": "cd dashboard && npm run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:docs": "node scripts/test-docs.mjs",
    "verify:exports": "node scripts/verify-exports.mjs",
    "verify:all": "npm run build && npm run verify:exports && npm run test:docs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "example": "npm run build:server && tsx examples/dashboard.ts",
    "example:metadata": "npm run build:server && tsx examples/dashboard.ts",
    "example:custom": "npm run build:server && tsx examples/custom-adapter.ts",
    "prepublishOnly": "npm run test && npm run verify:all && npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,mjs,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js,mjs}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "llm",
    "large-language-models",
    "ai",
    "nodejs",
    "monitoring",
    "observability",
    "telemetry",
    "infrastructure",
    "architecture",
    "openai",
    "anthropic",
    "gemini",
    "deepseek",
    "production"
  ],
  "peerDependencies": {
    "@node-llm/core": ">=1.10.0",
    "@node-llm/orm": ">=0.4.0",
    "@prisma/client": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@node-llm/orm": {
      "optional": true
    },
    "@prisma/client": {
      "optional": true
    }
  },
  "author": "Shaiju Edakulangara",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-llm/node-llm-monitor"
  },
  "bugs": {
    "url": "https://github.com/node-llm/node-llm-monitor/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@preact/preset-vite": "^2.10.3",
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "preact": "^10.28.3",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
